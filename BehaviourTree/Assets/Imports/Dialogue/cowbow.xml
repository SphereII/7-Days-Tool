<dialogs>
	<dialog id="WildWestCowboy" startstatementid="startWildWestCowboy">
	  <statement id="startWildWestCowboy" text="dialog_cowboy_response_startWildWestCowboy" ref_text="Howdy, partner! What can I do for you in these wild lands?">
		<response_entry id="TellMeAboutYourself" ref_text="Tell me about yourself." />
		<response_entry id="FindAmmo" ref_text="Where can I find some ammo around here?" />
		<response_entry id="FindWater" ref_text="I need to find some water. Any ideas?" />
		<response_entry id="AskForShelter" ref_text="Where's the nearest safe zone?" />
		<response_entry id="Bye" ref_text="GoodBye." />
	  </statement>
	  <statement id="CowboyBackstory" text="dialog_cowboy_response_CowboyBackstory" ref_text="Well, partner, I'm a gunslinger who's been roamin' these parts for years now. Fought in the war, then came out West to seek my fortune. I've seen it all – outlaws, stagecoach robberies, and even a shootout or two. Nowadays, I try to help folks like you navigate these treacherous lands.">
		<response_entry id="FindAmmo" ref_text="Where can I find some ammo around here?" />
		<response_entry id="FindWater" ref_text="I need to find some water. Any ideas?" />
		<response_entry id="AskForShelter" ref_text="Where's the nearest safe zone?" />
		<response_entry id="Bye" ref_text="GoodBye." />
	  </statement>
	  <statement id="AmmoLocation" text="dialog_cowboy_response_AmmoLocation" ref_text="There's an old general store not too far from here. You might find some ammo there, but be careful, it's swarming with outlaws.">
		<response_entry id="FindWater" ref_text="I need to find some water. Any ideas?" />
		<response_entry id="AskForShelter" ref_text="Where's the nearest safe zone?" />
		<response_entry id="Bye" ref_text="GoodBye." />
	  </statement>
	  <statement id="WaterLocation" text="dialog_cowboy_response_WaterLocation" ref_text="There's a river a few miles east of here. The water's pretty clean, but watch out for bandits hiding in the bushes.">
		<response_entry id="FindAmmo" ref_text="Where can I find some ammo around here?" />
		<response_entry id="AskForShelter" ref_text="Where's the nearest safe zone?" />
		<response_entry id="Bye" ref_text="GoodBye." />
	  </statement>
	  <statement id="SafeZoneLocation" text="dialog_cowboy_response_SafeZoneLocation" ref_text="The nearest safe zone is Fort Independence. It's a day's ride south of here. The folks there are friendly and willing to help travelers like yourself.">
		<response_entry id="FindAmmo" ref_text="Where can I find some ammo around here?" />
		<response_entry id="FindWater" ref_text="I need to find some water. Any ideas?" />
		<response_entry id="Bye" ref_text="GoodBye." />
	  </statement>
	  <response id="TellMeAboutYourself" text="dialog_cowboy_response_TellMeAboutYourself" nextstatementid="CowboyBackstory" ref_text="Tell me about yourself." />
	  <response id="FindAmmo" text="dialog_cowboy_response_FindAmmo" nextstatementid="AmmoLocation" ref_text="Where can I find some ammo around here?" >
		<action type="AddItemSDX, SCore" id="ammo9mmBulletBall" />
	  </response>
	  <response id="FindWater" text="dialog_cowboy_response_FindWater" nextstatementid="WaterLocation" ref_text="I need to find some water. Any ideas?" >
		<action type="AddItemSDX, SCore" id="drinkJarBoiledWater" />
		</response>
		<response id="AskForShelter" text="dialog_cowboy_response_AskForShelter" nextstatementid="SafeZoneLocation" ref_text="Where's the nearest safe zone?" />
		<response id="Bye" text="Gotta Go, Bye!" nextstatementid="done" ref_text="Gotta Go, Bye!" />
	</dialog>

